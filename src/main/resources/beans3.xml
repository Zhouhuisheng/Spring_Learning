<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- &lt;!&ndash; 第一种，下标赋值 &ndash;&gt; -->
    <!-- <bean id="user" class="com.kuang.pojo.User"> -->
    <!--     &lt;!&ndash; index是构造函数的参数的下标 从0开始 &ndash;&gt; -->
    <!--     <constructor-arg index="0" value="周辉生"/> -->
    <!-- </bean> -->

    <!-- &lt;!&ndash; 第二种，通过类型创建（不建议使用，因为多个参数都是同一类型时不好用） &ndash;&gt; -->
    <!-- <bean id="user" class="com.kuang.pojo.User"> -->
    <!--     &lt;!&ndash; type：参数的类型 &ndash;&gt; -->
    <!--     <constructor-arg type="java.lang.String" value="周辉生"/> -->
    <!-- </bean> -->

    <!--
        bean配置：
            id: bean的唯一标识符，也就是相当于我们学的对象名
            class: bean对象所对应的全限定名（包名+类名）
            name: 别名,可以同时取多个别名
     -->
    <bean id="user" class="com.kuang.pojo.User" name="user2, u3">
        <!-- 通过参数名赋值 -->
        <constructor-arg name="name" value="周辉生"/>
    </bean>

    <!-- 别名 如果添加了别名 我们也可以使用别名获取到这个对象 -->
    <alias name="user" alias="userNew"/>



</beans>
